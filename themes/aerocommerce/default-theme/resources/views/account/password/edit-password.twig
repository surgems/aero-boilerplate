{% extends "layouts.main" %}

{% block content %}
    <div class="flex flex-wrap flex-col w-full max-w-3xl mx-auto p-4 pb-8">
        <div class="w-full">
            <h1 class="text-primary text-3xl mt-3 mb-6 text-center">My Account</h1>
        </div>
        <div class="flex flex-wrap w-full">
            <div class="w-1/4 hidden lg:block pr-4">
                <div class="bg-white rounded-lg px-4 py-1 border border-grey-light">
                    {% include "account.partials.menu" %}
                </div>
            </div>
            <div class="w-full lg:w-3/4 bg-white rounded-lg shadow-lg lg:shadow-none p-5 border border-grey-light">
                <h2 class="text-primary mb-5 pb-4 text-xl border-grey-light border-b">Your Password</h2>
                <form action="{{ route('account.password') }}" method="post">
                    {{ csrf_field() }}
                    {{ method_field('put') }}
                    {% if errors is not empty %}
                        <div class="mb-4">
                            <span class="block w-full bg-white border-2 border-red text-red font-bold my-2 p-3 rounded-lg text-center lg:shadow-md" role="alert">
                                <strong>There was a problem updating your password.</strong>
                            </span>
                        </div>
                    {% endif %}
                    {% if session('message') %}
                        <div class="mb-4">
                            <span class="block w-full bg-white border-2 border-green text-green font-bold my-2 p-3 rounded-lg text-center lg:shadow-md" role="alert">
                                <strong>{{ session('message') }}</strong>
                            </span>
                        </div>
                    {% endif %}
                    <div>
                        <label for="current_password" class="text-primary-dark text-sm font-semibold block pb-2">Current Password</label>
                        {% if errors.has('current_password') %}
                            <span class="block w-full bg-white border-2 border-red text-red font-bold mb-2 p-3 rounded-lg text-center lg:shadow-md" role="alert">
                                <strong>{{ errors.first('current_password') }}</strong>
                            </span>
                        {% endif %}
                        <input id="current_password" type="password" name="current_password" autocomplete="current-password"
                               class="border hover:border-grey-dark focus:border-primary focus:border-2 rounded outline-none focus:outline-none p-3 m-px focus:m-0 w-full"
                               required>
                    </div>
                    <div class="mt-4">
                        <label for="new_password" class="text-primary-dark text-sm font-semibold block pb-2">New Password</label>
                        {% if errors.has('new_password') %}
                            <span class="block w-full bg-white border-2 border-red text-red font-bold mb-2 p-3 rounded-lg text-center lg:shadow-md" role="alert">
                                <strong>{{ errors.first('new_password') }}</strong>
                            </span>
                        {% endif %}
                        <input id="new_password" type="password" name="new_password" autocomplete="new-password"
                               class="border hover:border-grey-dark focus:border-primary focus:border-2 rounded outline-none focus:outline-none p-3 m-px focus:m-0 w-full"
                               required>
                    </div>
                    <div class="mt-4">
                        <label for="new_password_confirmation" class="text-primary-dark text-sm font-semibold block pb-2">Confirm New Password</label>
                        <input id="new_password_confirmation" type="password" name="new_password_confirmation" autocomplete="new-password"
                               class="border hover:border-grey-dark focus:border-primary focus:border-2 rounded outline-none focus:outline-none p-3 m-px focus:m-0 w-full"
                               required>
                    </div>
                    <div class="mt-6 flex items-center justify-end">
                        <button type="submit" class="inline-block border-2 border-primary bg-primary text-white font-bold py-4 px-8 rounded-full outline-none focus:outline-none hover:border-primary-dark hover:bg-primary-dark cursor-pointer transition-fast">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
