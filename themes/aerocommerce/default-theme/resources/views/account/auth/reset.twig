{% extends "layouts.main" %}

{% block title %}My Account &ndash; Reset Password | {{ aero('name') }}{% endblock %}

{% block content %}
    <div class="flex flex-wrap flex-col w-full max-w-3xl mx-auto p-4 pb-8">
        <div class="w-full">
            <h1 class="text-primary text-3xl mt-3 mb-6 text-center">My Account</h1>
        </div>
        <div class="w-full flex-1 flex flex-wrap lg:flex-row-reverse">
            <div class="w-full lg:w-2/5 mx-auto">
                <form action="{{ route('password.update') }}" method="post" class="bg-white rounded-lg shadow-lg lg:shadow-none p-6 border border-grey-light">
                    {{ csrf_field() }}
                    <input type="hidden" name="token" value="{{ token }}" />
                    <h2 class="text-primary mb-5 pb-4 text-xl border-grey-light border-b">Reset Password</h2>
                    {% if session('status') %}
                        <div class="mt-4">
                            <span class="block w-full bg-white border-2 border-green text-green font-bold my-2 p-3 rounded-lg text-center lg:shadow-md" role="alert">
                                <strong>{{ session('status') }}</strong>
                            </span>
                        </div>
                    {% endif %}
                    <div class="mt-4">
                        <label for="register-email" class="text-primary-dark text-sm font-semibold block pb-2">Email</label>
                        {% if errors.has('email') %}
                            <span class="block w-full bg-white border-2 border-red text-red font-bold mb-2 p-3 rounded-lg text-center lg:shadow-md" role="alert">
                                <strong>{{ errors.first('email') }}</strong>
                            </span>
                        {% endif %}
                        <input id="register-email" type="email" name="email" value="{{ old('email', email) }}"
                               class="border hover:border-grey-dark focus:border-primary focus:border-2 rounded outline-none focus:outline-none p-3 m-px focus:m-0 w-full"
                               autocomplete="email"
                               required{% if errors is empty %} autofocus{% endif %}>
                    </div>

                    <div class="mt-4">
                        <label for="password" class="text-primary-dark text-sm font-semibold block pb-2">Password</label>
                        {% if errors.has('password') %}
                            <span class="block w-full bg-white border-2 border-red text-red font-bold mb-2 p-3 rounded-lg text-center lg:shadow-md" role="alert">
                                <strong>{{ errors.first('password') }}</strong>
                            </span>
                        {% endif %}
                        <input id="password" type="password" name="password"
                               class="border hover:border-grey-dark focus:border-primary focus:border-2 rounded outline-none focus:outline-none p-3 m-px focus:m-0 w-full"
                               required>
                    </div>

                    <div class="mt-4">
                        <label for="password_confirmation" class="text-primary-dark text-sm font-semibold block pb-2">Confirmation</label>
                        {% if errors.has('password_confirmation') %}
                            <span class="block w-full bg-white border-2 border-red text-red font-bold mb-2 p-3 rounded-lg text-center lg:shadow-md" role="alert">
                                <strong>{{ errors.first('password_confirmation') }}</strong>
                            </span>
                        {% endif %}
                        <input id="password_confirmation" type="password" name="password_confirmation"
                               class="border hover:border-grey-dark focus:border-primary focus:border-2 rounded outline-none focus:outline-none p-3 m-px focus:m-0 w-full"
                               required>
                    </div>

                    <div class="mt-6 flex items-center justify-end">
                        <button type="submit" class="w-full lg:w-auto inline-block border-2 border-primary bg-primary text-white font-bold py-4 px-8 rounded-full outline-none focus:outline-none hover:border-primary-dark hover:bg-primary-dark cursor-pointer transition-fast">Reset Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
